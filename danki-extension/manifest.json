{
  "manifest_version": 2,

  "name": "Danki",
  "description": "Flashcards in the browser",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "https://ajax.googleapis.com/",
    "https://tools.ietf.org/"
  ],
  "icons": {
    "16": "icon.png"
  },
  "background": {
    "scripts": ["context-menu.js"]
  }
}